<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="ui-neumorphiclayout" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="px-20 bg-neumorphic">
        <ScrollView class="h-full">
          <StackLayout>
            <StackLayout verticalAlignment="center" width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" neumorphicState="FLAT" neumorphicTouchState="PRESSED" cornerRadius="26">
                <Label text="FLAT" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout verticalAlignment="center" width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" neumorphicState="PRESSED" neumorphicTouchState="FLAT" cornerRadius="26">
                <Label text="PRESSED" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout verticalAlignment="center" width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" neumorphicState="PRESSED_IN_OUT" neumorphicTouchState="FLAT" cornerRadius="26">
                <Label text="PRESSED_IN_OUT" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout verticalAlignment="center" width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" neumorphicState="CONCAVE" neumorphicTouchState="CONVEX" cornerRadius="26">
                <Label text="CONCAVE" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout verticalAlignment="center" width="200" height="200" marginTop="30" marginBottom="24" neumorphicColor="#e0e1e3" neumorphicState="CONVEX" neumorphicTouchState="CONCAVE" cornerRadius="100">
                <Label text="CONVEX" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>