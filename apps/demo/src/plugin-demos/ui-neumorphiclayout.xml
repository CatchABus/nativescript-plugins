<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:ui="@nativescript-community/ui-neumorphiclayout" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="ui-neumorphiclayout" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="px-20 bg-neumorphic">
        <ScrollView class="h-full">
          <StackLayout>
            <ui:NeumorphicLayout width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" state="FLAT" touchState="PRESSED" cornerRadius="26">
                <Label text="FLAT" textAlignment="center" width="100%" fontSize="24" color="#6d707d" fontWeight="bold" top="35"/>
            </ui:NeumorphicLayout>
            <ui:NeumorphicLayout width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" state="PRESSED" touchState="FLAT" cornerRadius="26">
                <Label text="PRESSED" textAlignment="center" width="100%" fontSize="24" color="#6d707d" fontWeight="bold" top="35"/>
            </ui:NeumorphicLayout>
            <ui:NeumorphicLayout width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" state="PRESSED_IN_OUT" touchState="FLAT" cornerRadius="26">
                <Label text="PRESSED_IN_OUT" textAlignment="center" width="100%" fontSize="24" color="#6d707d" fontWeight="bold" top="35"/>
            </ui:NeumorphicLayout>
            <ui:NeumorphicLayout width="220" height="100" marginTop="30" neumorphicColor="#e0e1e3" state="CONCAVE" touchState="CONVEX" cornerRadius="26">
                <Label text="CONCAVE" textAlignment="center" width="100%" fontSize="24" color="#6d707d" fontWeight="bold" top="35"/>
            </ui:NeumorphicLayout>
            <ui:NeumorphicLayout width="200" height="200" marginTop="30" marginBottom="24" neumorphicColor="#e0e1e3" state="CONVEX" touchState="CONCAVE" cornerRadius="100">
                <Label text="CONVEX" textAlignment="center" width="100%" fontSize="24" color="#6d707d" fontWeight="bold" top="85"/>
            </ui:NeumorphicLayout>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>