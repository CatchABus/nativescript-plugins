<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="ui-neumorphiclayout" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="px-20 bg-neumorphic">
        <ScrollView class="h-full">
          <StackLayout>
            <StackLayout class="neumorphism" verticalAlignment="center" neumorphism="flat">
                <Label text="Flat" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout class="neumorphism" verticalAlignment="center" neumorphism="pressed">
                <Label text="Pressed" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
            <StackLayout class="neumorphism" verticalAlignment="center" neumorphism="pressed-in-out">
                <Label text="Pressed in out" textAlignment="center" fontSize="24" color="#6d707d" fontWeight="bold"/>
            </StackLayout>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>