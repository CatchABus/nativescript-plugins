<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="dns-lookup" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20">
        <ScrollView class="h-full">
          <StackLayout>
            <TextField text="{{ hostName }}"/>
            <Button text="DNS-LOOKUP" tap="{{ testIt }}" class="btn btn-primary"/>
            <Label class="p-t-20" text="Addresses:" fontWeight="bold"/>
            <Label text="{{ ipAddresses }}" textWrap="true"/>
          </StackLayout>
        </ScrollView>
    </StackLayout>
</Page>